{
  "name": "@redstone-finance/gelato-relayer",
  "version": "0.4.0",
  "description": "RedStone Relayer based on Gelato Web3 Functions",
  "repository": "https://github.com/redstone-finance/redstone-oracles-monorepo",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist && rm -rf .tmp && rm -rf artifacts",
    "build": "yarn clean && yarn compile && yarn global:tsc --build tsconfig.build.json",
    "compile": "cd ../on-chain-relayer && hardhat compile && cd ../gelato-relayer && hardhat compile",
    "sample-contract-compile": "npx hardhat compile --force",
    "sample-contract-deploy": "npx hardhat deploy",
    "test": "npx hardhat test",
    "w3f-run": "yarn build && npx hardhat w3f-run redstone --debug --logs",
    "w3f-deploy": "yarn build && npx hardhat w3f-deploy redstone | tee /dev/tty | ts-node save-deploy-cid.ts",
    "lint": "yarn global:eslint ."
  },
  "license": "MIT",
  "devDependencies": {
    "@ethersproject/abi": "^5.6.3",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon-chai": "^3.2.12",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.2",
    "hardhat-deploy": "0.11.23",
    "mocha": "^10.2.0",
    "ts-generator": "0.1.1",
    "typechain": "^8.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@gelatonetwork/web3-functions-sdk": "^2.4.1",
    "@redstone-finance/on-chain-relayer": "^0.4.0"
  }
}
