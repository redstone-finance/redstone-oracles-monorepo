{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "downlevelIteration": true
  },
  "include": [
    "hardhat",
    "deploy",
    "scripts",
    "src",
    "typechain",
    "web3-functions",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../on-chain-relayer/tsconfig.build.json"
    },
    {
      "path": "../evm-connector/tsconfig.build.json"
    }
  ]
}
