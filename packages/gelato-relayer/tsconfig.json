{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist"
  },
  "files": ["hardhat.config.ts"],
  "include": [
    "hardhat",
    "deploy",
    "scripts",
    "src",
    "typechain",
    "web3-functions"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../on-chain-relayer"
    }
  ]
}
