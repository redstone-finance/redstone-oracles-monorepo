{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "src/**/*.json", "./package.json", "index.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../starknet-connector/tsconfig.build.json"
    },
    {
      "path": "../sdk/tsconfig.build.json"
    },
    {
      "path": "../protocol/tsconfig.build.json"
    }
  ]
}
