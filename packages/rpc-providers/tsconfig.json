{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typechain-types",
    "package.json",
    "./contracts",
    "src/**/*.json",
    "./artifacts/**/*.json",
    "./hardhat.config.ts"
  ]
}
