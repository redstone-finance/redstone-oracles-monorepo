{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true
  },
  "include": [
    "./src",
    "./test",
    "./typechain-types",
    "package.json",
    "./contracts",
    "src/**/*.json",
    "./artifacts/**/*.json"
  ],
  "files": ["./hardhat.config.ts"],
  "references": [
    {
      "path": "../protocol"
    },
    {
      "path": "../sdk"
    }
  ]
}
