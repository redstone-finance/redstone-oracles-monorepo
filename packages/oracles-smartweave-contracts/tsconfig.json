{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2021"],
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/contracts/redstone-oracle-registry/**/*",
    "./package.json",
    "index.ts",
    "src/contracts/redstone-oracle-registry/initial-state.json"
  ],
  "exclude": ["node_modules", "tools", "test"]
}
