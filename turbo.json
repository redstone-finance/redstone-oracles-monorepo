{
  "tasks": {
    "compile": {
      "inputs": ["hardhat.config.ts", "contracts/**"],
      "outputs": ["typechain-types/**", "artifacts/**", "cache/**"],
      "dependsOn": ["^build-dev"]
    },
    "build-dev": {
      "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/tsconfig-common.json", "!tsconfig.build.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build-dev", "compile"]
    },
    "lint": {
      "inputs": ["./**.{js,ts}", "$TURBO_ROOT$/eslint.config.ts"],
      "dependsOn": ["^build-dev", "compile"]
    },
    "test": {
      "inputs": ["test/**"],
      "outputs": ["coverage/**"],
      "dependsOn": ["build-dev"],
      "passThroughEnv": ["GH_AUTH_TOKEN"]
    },
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "$TURBO_ROOT$/tsconfig-build-common.json",
        "!test*/**",
        "!scripts/**",
        "!tsconfig.json"
      ],
      "outputs": ["dist/**"],
      "dependsOn": ["^build", "compile"]
    },
    "bundle": {
      "inputs": ["dist/**", "$TURBO_ROOT$/rollup-config.mjs"],
      "outputs": ["dist/index.js"],
      "dependsOn": ["build"]
    },
    "zip": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "pushDev": {
      "cache": false,
      "dependsOn": ["zip"],
      "passThroughEnv": [
        "AWS_PROFILE",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "AWS_REGION"
      ]
    },
    "pushProd": {
      "cache": false,
      "dependsOn": ["zip"],
      "passThroughEnv": [
        "AWS_PROFILE",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "AWS_REGION"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
